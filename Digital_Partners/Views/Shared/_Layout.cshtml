<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digital_Partners</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <style>

        * {
        }

        body {
            background-color: #F6F6F6;
        }

        li, a {
            font-weight: 400;
            text-decoration: none;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0px 30px;
            background-color: white;
            height: 100px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }

        .logo {
            cursor: pointer;
            color: red;
            font-size: 24px;
        }



        .nav_links {
            margin: 0;
            list-style: none;
        }

        .nav_links li {
            display: inline-block;
            padding: 0px 20px;
            font-size: 18px;
        }

        .nav_links li a {
            transition: all 0.3s ease 0s;
            color: dimgray;
            opacity: 0.7;
        }

        .nav_links li a:hover {
            color: #6573D8;
            opacity: 1;
            text-decoration: underline solid #6573D8;
            text-underline-offset: 15px;
        }

    </style>
</head>
<body>
    <header>
        
            <a class="logo" style="color: #6573D8">shiftPlan.io</a>
            <nav>
                <ul class="nav_links">
                    <li><a asp-controller="Home" asp-action="Index">Oversigt</a></li>
                    <li><a asp-controller="Medarbejder" asp-action="Index">Medarbejdere</a></li>
                    <li><a asp-controller="Opgaver" asp-action="Index">Opgaver</a></li>
                </ul>
            </nav>
    </header>

    @RenderBody()
       

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Digital_Partners - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
